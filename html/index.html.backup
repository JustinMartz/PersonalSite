<script>
    const pageHash = window.location.hash;
    console.log(pageHash);
    switch (pageHash) {
        case '#projects':
            showpProjects();
    } 
    document.getElementById("about").style.display = "block";

    var navbar = document.getElementById("nav-bar");
    var buttons = navbar.getElementsByClassName("link-button");
    var articles = document.getElementById("articles");
    var pages = document.getElementsByClassName("sections");

    for (var i = 0; i < buttons.length; i++) {
        buttons[i].addEventListener("click", function() {
            var current = document.getElementsByClassName("active");
            current[0].className = current[0].className.replace(" active", "");
            this.className += " active";

            if (this.getAttribute("href") === "#resume") {
                showResume();
            } else if (this.getAttribute("href") === "#about") {
                showAbout();
            } else if (this.getAttribute("href") === "#projects") {
                showProjects();
            } else if (this.getAttribute("href") === "#contact") {
                showContact();
            }
        });
    }

    function showResume() {
        var x = document.getElementById("resume");

        x.style.display = "block";
        document.getElementById("about").style.display = "none";
        document.getElementById("projects").style.display = "none";
        document.getElementById("contact").style.display = "none";
    }

    function showAbout() {
        var x = document.getElementById("about");
        x.style.display = "block";
        document.getElementById("resume").style.display = "none";
        document.getElementById("projects").style.display = "none";
        document.getElementById("contact").style.display = "none";
    }

    function showProjects() {
        var x = document.getElementById("projects");
       
        x.style.display = "block";
        document.getElementById("about").style.display = "none";
        document.getElementById("resume").style.display = "none"; 
        document.getElementById("contact").style.display = "none";
    }
    
    function showContact() {
        var x = document.getElementById("contact");
       
        x.style.display = "block";
        document.getElementById("about").style.display = "none";
        document.getElementById("resume").style.display = "none"; 
        document.getElementById("projects").style.display = "none";
    }
</script>

</html>